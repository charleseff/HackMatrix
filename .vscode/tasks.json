{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build HackMatrix",
      "type": "shell",
      "command": "swift",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$swiftc"]
    },
    {
      "label": "Run GUI",
      "type": "shell",
      "command": "${workspaceFolder}/.build/debug/HackMatrix",
      "args": [],
      "dependsOn": "Build HackMatrix",
      "problemMatcher": []
    }
  ]
}
